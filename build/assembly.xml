<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">

  <id>make-release-zip</id>

  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <files>
    <file>
      <source>src/main/docs/index.html</source>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/main/docs/license/license_${license}.txt</source>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/main/docs/license/license_thirdparty.md</source>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/main/docs/setup.txt</source>
      <filtered>true</filtered>
    </file>
  </files>

  <fileSets>
    <fileSet>
      <directory>src/main/docs/welcome</directory>
      <outputDirectory>welcome</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>src/main/docs/edash</directory>
      <outputDirectory>edash</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
  </fileSets>

  <dependencySets>
    <!-- Include the edash sources -->
    <dependencySet>
      <includes>
        <include>com.sencha.gxt:gxt-edash:jar</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/*.class</exclude>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useProjectArtifact>false</useProjectArtifact>
      <useStrictFiltering>true</useStrictFiltering>
      <outputDirectory>edash/src</outputDirectory>
    </dependencySet>

    <!-- Include the edash.war -->
    <dependencySet>
      <includes>
        <include>com.sencha.gxt:gxt-edash:war</include>
      </includes>
      <unpack>false</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <useStrictFiltering>true</useStrictFiltering>
      <outputDirectory>edash/</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
  </dependencySets>

</assembly>
